@model XCManager.Models.Runner
@{
    ViewBag.Title = "RunnerDetails";
}
<link type="text/css" rel="stylesheet" href="~/Content/RunnerDetails.css" />
<h2>@Model.Name</h2>
<div id="BigPanel" class="panel panel-default">
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Email: @Model.Email</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Grade: @Model.Grade</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Name: @Model.Name</h3>
                </div>
            </div>
        </div>
    </div>
</div>

