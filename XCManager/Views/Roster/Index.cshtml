
@{
    ViewBag.Title = "Index";
}
<link type="text/css" rel="stylesheet" href="~/Content/Roster.css" />
<h2>Roster</h2>

<table id="rosterTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
<div class="text-center">
    @Html.ActionLink("New Runner", "NewRunner", "null", new { @class = "btn btn-primary"})
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#rosterTable").DataTable({
                ajax: {
                    url: '/api/Runners',
                    dataSrc: ''
                },
                columns: [
                    {
                        data: 'Name',
                        render: function (data, type, row) {
                            return "<a href='/Roster/RunnerDetails/" + row.Id + "'" + " class='btn-link'>" + data + "</a>"
                        }
                    },
                    { data: 'Grade' },
                    {
                        data: 'Id',
                        render: function (data) {
                            return "<button class='btn-link js-click' data-runner-id=" + data + " >Delete</button>" + "  "
                                + "<a href='/Roster/UpdateRunner/" + data + "'" + ">Edit</a>"
                                + "  " + "<a href='/Roster/RunnerDetails/" + data + "'" + ">Details</a>" 
                        }
                    }
                ],
                searching: false,
                info: false,
                paging: false
            });


            $("#rosterTable").on("click", ".js-click", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this runner?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Runners/" + button.attr("data-runner-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        })
                    }
                });
            });
        });
    </script>    
}

